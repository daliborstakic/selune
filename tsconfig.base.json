{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@selune-backend/auth": ["libs/backend/auth/src/index.ts"],
      "@selune-backend/auth-application": [
        "libs/backend/auth/src/lib/application/src/index.ts"
      ],
      "@selune-backend/connection": ["libs/backend/connection/src/index.ts"],
      "@selune-backend/dtos": ["libs/backend/dtos/src/index.ts"],
      "@selune-backend/entities": ["libs/backend/entities/src/index.ts"],
      "@selune-backend/helpers": ["libs/backend/helpers/src/index.ts"],
      "@selune-backend/user": ["libs/backend/user/src/index.ts"],
      "@selune-backend/user-application": [
        "libs/backend/user/src/lib/application/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
